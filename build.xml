        <do.ivy includes="components/*/build.xml,core/build.xml,private-components/*/build.xml"
                target="jar"/>
    </target>

    <target name="clean" depends="initialize">
        <do.ivy includes="components/*/build.xml,core/build.xml,private-components/*/build.xml"
                target="clean"/>        
    </target>
    
    <target name="clean-cache">
        <ivy:configure file="${limewire.home}/ivysettings.xml" override="true"/>
        <ivy:cleancache />                                                              
    </target>
    
    <target name="initialize" depends="ivy-taskdef" unless="initialized.limewire">
        <property name="limewire.components.limewire.home"
                  location="${limewire.home}"/>
        <property name="limewire.components.limewire.tests"
                  location="${limewire.components.tests.home}"/>
        <do.setup-properties component="limewire"/>
    </target>
    
