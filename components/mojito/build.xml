<?xml version="1.0"?>
<project name="DHT" default="build" basedir=".">
    <description>Kademlia + PATRICA = Love :-)</description>

	<property name="basedir" value="."/>
	<property name="jars" value="${basedir}/lib"/>
		
	<path id="default.classpath" >
		<fileset dir="${jars}" includes="**/*.jar"/>
	</path>
	
    <target name="build">
	    	<javac srcdir="${basedir}" 
				destdir="${basedir}"
		    		target="1.4"
		    		source="1.4"
	    			compiler="javac1.4"
		    		debug="true"
	    			optimize="false">
			<classpath refid="default.classpath"/>
    	    </javac>
    </target>
		
	<target name="clean">
		<delete>
			<fileset dir="${basedir}" 
				includes="com/**/*.class de/**/*.class"
			/>
		</delete>
	</target>
	
	<target name="planetLab" depends="clean, build">
		<delete file="planetlab.jar"/>
		<jar destfile="planetlab.jar" 
				basedir="${basedir}"
				includes="com/**, de/**"
				excludes="**/bin/**"
				compress="false">
			<manifest>
			 	<attribute name="Main-Class" value="com.limegroup.gnutella.dht.tests.PlanetLab"/>
			 	<attribute name="Class-Path" value=". commons-logging.jar log4j.jar"/>
			</manifest>
		</jar>
	</target>
</project>

