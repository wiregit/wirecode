<?xml version="1.0" encoding="UTF-8"?>

<project name="lw-lwsserver" basedir="." default="compile-src">

	<description>
		LimeWire component 'lws'.
	    This component contains utility classes for dealing with I/O.
	</description>

	<import file="../common/build-macros.xml" />
	<import file="../common/build.xml" />

	<target name="initialize" depends="lw-common.initialize, lw-http.initialize">
		<do.setup-properties component="lwsserver">
			<src-classpath>
				<pathelement location="${limewire.lib.jars}/commons-logging.jar" />
				<pathelement location="${limewire.lib.jars}/commons-pool.jar" />
				<pathelement location="${limewire.lib.jars}/jakarta-httpcore.jar"/>
				<path refid="build.limewire.components.common.buildpath" />
				<path refid="build.limewire.components.http.buildpath" />
			</src-classpath>
		</do.setup-properties>
	</target>

	<target name="clean" depends="lw-common.clean">
		<do.clean component="lws" />
	</target>

	<target name="compile" depends="lw-common.compile">
		<do.compile component="lws" />
	</target>

	<target name="compile-src" depends="lw-common.compile-src">
		<do.compile-src component="lws" />
	</target>

	<target name="clean-src" depends="lw-common.clean-src">
		<do.clean-src component="lws" />
	</target>

	<target name="compile-tests" depends="lw-common.compile-tests">
		<do.compile-tests component="lws" />
	</target>
	<target name="clean-tests" depends="lw-common.clean-tests">
		<do.clean-tests component="lws" />
	</target>

	<target name="test" if="class" depends="compile">
		<do.test component="lws" class="${class}" />
	</target>

	<target name="test-package" if="package" depends="compile">
		<do.test-package component="lws" package="${package}" />
	</target>

	<target name="test-all" depends="compile">
		<do.test-all component="lws" />
	</target>

	<target name="jar" depends="initialize, compile-src">
		<do.jar component="lws" />
	</target>

	<target name="javadoc" depends="initialize, compile-src">
		<do.javadoc component="lws" />
	</target>

	<target name="clean-dist" depends="initialize">
		<do.clean-dist component="lws" />
	</target>

	<target name="with.clover" depends="initialize">
		<do.clover-setup component="lws" />
	</target>

	<target name="clover2html" depends="initialize">
		<do.clover2html component="lws" />
	</target>
	
	<target name="demoserver" depends="compile-tests" description="Runs the demo remote server">
		<java classname="org.limewire.store.lws.local.LocalRemoteServer"
					classpathref="build.limewire.components.lws.tests.classpath" />
	</target>	

</project>